# Use the official Node.js 20 LTS Alpine imageFROM node:20-alpine# Create app directoryWORKDIR /app# Install dependenciesCOPY package.json package-lock.json ./RUN npm install --omit=dev# Bundle app sourceCOPY src ./srcCOPY openapi.yaml .env.example README.md render.yaml ./# Set NODE_ENV and expose portENV NODE_ENV=productionEXPOSE 3000# Start the appCMD ["npm", "start"]